<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsshy.beam.modular.tool.dao.FeedbackMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hsshy.beam.modular.tool.entity.Feedback" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="mid" column="mid"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
		            a.`id` AS "id", 
                a.`mid` AS "mid", 
                a.`content` AS "content", 
                a.`create_time` AS "createTime", 
                a.`update_time` AS "updateTime"
        </sql>

    <select id="selectPageList" resultType="com.hsshy.beam.modular.tool.entity.Feedback">
        select
        <include refid="Base_Column_List"/>
        from t_feedback a
        <where>
            <if test="feedback.mid != null and feedback.mid != ''">
                and a.mid = #{feedback.mid}
            </if>
            <if test="feedback.content != null and feedback.content != ''">
                and a.content = #{feedback.content}
            </if>

        </where>
    </select>

</mapper>