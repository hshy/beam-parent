<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsshy.beam.modular.tool.dao.ToolMenuMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hsshy.beam.modular.tool.entity.ToolMenu" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="url" column="url"/>
        <result property="status" column="status"/>
        <result property="sort" column="sort"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
		            a.`id` AS "id", 
                a.`name` AS "name", 
                a.`icon` AS "icon", 
                a.`url` AS "url", 
                a.`status` AS "status", 
                a.`sort` AS "sort", 
                a.`create_time` AS "createTime", 
                a.`update_time` AS "updateTime"
        </sql>

    <select id="selectPageList" resultType="com.hsshy.beam.modular.tool.entity.ToolMenu">
        select
        <include refid="Base_Column_List"/>
        from t_tool_menu a
        <where>
            <if test="toolMenu.name != null and toolMenu.name != ''">
                and a.name = #{toolMenu.name}
            </if>
            <if test="toolMenu.icon != null and toolMenu.icon != ''">
                and a.icon = #{toolMenu.icon}
            </if>
            <if test="toolMenu.url != null and toolMenu.url != ''">
                and a.url = #{toolMenu.url}
            </if>
            <if test="toolMenu.status != null and toolMenu.status != ''">
                and a.status = #{toolMenu.status}
            </if>
            <if test="toolMenu.sort != null and toolMenu.sort != ''">
                and a.sort = #{toolMenu.sort}
            </if>

        </where>
    </select>

</mapper>