<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsshy.beam.seckill.dao.SeckillMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hsshy.beam.seckill.entity.Seckill" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="number" column="number"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="createTime" column="create_time"/>
        <result property="version" column="version"/>
    </resultMap>

    <sql id="Base_Column_List">
		            a.`id` AS "id", 
                    a.`name` AS "name", 
                    a.`number` AS "number", 
                    a.`start_time` AS "startTime", 
                    a.`end_time` AS "endTime", 
                    a.`create_time` AS "createTime", 
                    a.`version` AS "version"
            </sql>
    <update id="updateNum">
        UPDATE seckill  SET number=number-1
        <where>
            <if test="seckill.id !='' and seckill.id!=null">
                id = #{seckill.id}
            </if>
            <if test="seckill.number!=null">
                and number &gt; #{seckill.number}
            </if>

        </where>
    </update>

</mapper>